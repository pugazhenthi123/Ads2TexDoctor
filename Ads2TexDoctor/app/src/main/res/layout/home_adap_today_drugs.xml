<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/home_adap_today_title_lyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".40"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/home_adap_today_title_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fadingEdge="horizontal"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:text="Name"
                android:textAlignment="center"
                android:textColor="#303F9F"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".30"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/home_adap_today_title_unit_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fadingEdge="horizontal"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:text="Unit"
                android:textAlignment="center"
                android:textColor="#303F9F"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".30"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/home_adap_today_title_sugar_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fadingEdge="horizontal"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:text="Quantity"
                android:textAlignment="center"
                android:textColor="#303F9F"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/home_adap_today_lyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".40"
            android:layout_height="25dp">
            <TextView
                android:id="@+id/home_adap_today_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fadingEdge="horizontal"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:text="Name"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="@color/carbon_black"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".30"
            android:layout_height="25dp">
            <TextView
                android:id="@+id/home_adap_today_unit_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fadingEdge="horizontal"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:layout_gravity="center"
                android:text="Unit"
                android:textAlignment="center"
                android:textColor="@color/carbon_black"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".30"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/home_adap_today_spinner_qty_lyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/round_button3" />

                <Spinner
                    android:id="@+id/home_adap_today_spinner_qty_sp"
                    android:layout_width="match_parent"
                    android:layout_height="25sp"
                    android:gravity="center"
                    android:spinnerMode="dialog" />

                <Button
                    android:id="@+id/home_adap_today_spinner_qty_sp_btn"
                    style="?android:borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="25sp"
                    android:layout_marginTop="3dp"
                    android:gravity="center" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>